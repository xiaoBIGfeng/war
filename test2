import os
import shutil

# 定义源文件夹路径和目标文件夹路径
source_gt = "/path_to/GT"
source_lr = "/path_to/LR"
destination_gt = "/path_to/destination/gt"
destination_lr = "/path_to/destination/lr"

# 确保目标文件夹存在，如果不存在则创建
os.makedirs(destination_gt, exist_ok=True)
os.makedirs(destination_lr, exist_ok=True)

# 获取源文件夹中文件名列表，并排序（确保按顺序处理前 50 张图片）
gt_files = sorted(os.listdir(source_gt))[:50]  # 获取前 50 张图片
lr_files = sorted(os.listdir(source_lr))[:50]  # 获取前 50 张图片

# 移动 GT 文件夹中的前 50 张图片
for file_name in gt_files:
    src_path = os.path.join(source_gt, file_name)
    dest_path = os.path.join(destination_gt, file_name)
    shutil.move(src_path, dest_path)  # 移动文件
    print(f"Moved {src_path} to {dest_path}")

# 移动 LR 文件夹中的前 50 张图片
for file_name in lr_files:
    src_path = os.path.join(source_lr, file_name)
    dest_path = os.path.join(destination_lr, file_name)
    shutil.move(src_path, dest_path)  # 移动文件
    print(f"Moved {src_path} to {dest_path}")

print("File transfer complete.")
