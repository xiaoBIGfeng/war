# 定义列宽
column_width = 12  # 每列固定宽度

# 修改表头，方法名称按固定列宽对齐
header = f"{'name'.ljust(name_width)}" + "".join([method_name.ljust(column_width) for method_name in method_names]) + "\n"
f.write(header)

# 修改输出每行 PSNR 值，按固定列宽对齐
row = f"{gt_image_name.ljust(name_width)}" + "".join([psnr_str.ljust(column_width) for psnr_str in row[1:]]) + "\n"
f.write(row)
